<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Tests" parallel="tests" thread-count="4">

    <!-- Desktop browsers -->
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <parameter name="environment" value="test"/>
        <classes>
            <class name="com.patio.ui.HomePageTests"/>
            <class name="com.patio.ui.ProductPageTests"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <parameter name="environment" value="test"/>
        <classes>
            <class name="com.patio.ui.HomePageTests"/>
            <class name="com.patio.ui.ProductPageTests"/>
        </classes>
    </test>

    <!-- Mobile devices -->
    <test name="iPhone 12 Test">
        <parameter name="device" value="iphone12"/>
        <parameter name="isMobile" value="true"/>
        <parameter name="environment" value="stage"/>
        <classes>
            <class name="com.patio.ui.HomePageTests"/>
        </classes>
    </test>

    <test name="Samsung Galaxy S21 Test">
        <parameter name="device" value="samsung_s21"/>
        <parameter name="isMobile" value="true"/>
        <parameter name="environment" value="stage"/>
        <classes>
            <class name="com.patio.ui.HomePageTests"/>
        </classes>
    </test>

    <!-- Tablet devices -->
    <test name="iPad Pro Test">
        <parameter name="device" value="ipad_pro"/>
        <parameter name="isTablet" value="true"/>
        <parameter name="environment" value="prod"/>
        <classes>
            <class name="com.patio.ui.HomePageTests"/>
        </classes>
    </test>
</suite>